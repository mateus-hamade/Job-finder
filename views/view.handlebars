<main class="container m-auto pt-32 flex flex-col items-center">
    <div class="h-screen w-1/2">
        <div class="flex flex-col items-center" style="margin-bottom:35px">
            <h1 class="text-4xl font-bold text-center">{{job.dataValues.title}}</h1>
        </div>
        <div class="mockup-code break-all">
            <pre data-prefix="$"><code>npm run <span class="text-red-500">job-finder</span></code></pre> 
            <pre data-prefix=">" class="text-warning"><code><span class="text-violet-700">let</span> <span class="text-red-500">salario</span>   = R${{job.dataValues.salary}},00</code></pre> 
            <pre data-prefix=">" class="text-success"><code><span class="text-violet-700">let</span> <span class="text-red-500">empresa</span>   = {{job.dataValues.company}}</code></pre>
            <pre data-prefix=">" class="text-success"><code><span class="text-violet-700">let</span> <span class="text-red-500">contato</span>   = {{job.dataValues.email}}</code></pre>
            <pre data-prefix=">" class="text-success"><code><span class="text-violet-700">let</span> <span class="text-red-500">descrição</span> = {{job.dataValues.description}}</code></pre>
            <pre data-prefix=">" class="text-success"><code><span class="text-orange-500">installing...</span></code></pre>
            <pre data-prefix=">" class="text-success"><code><span class="text-green-600">Done!</span></code></pre>
        </div>
    </div>
</main>